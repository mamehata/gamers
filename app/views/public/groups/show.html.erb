<div class="row mt-4 pb-4 border-bottom">
  <h2 class="text-center"><%= @group.group_name %>のグループページ</h2>
</div>

<div class="row border-bottom justify-content-center">
  <div class="col-3 border-end p-0">
    <div class="col-12 border-bottom d-flex justify-content-center" id="group-sideber-top">
      <div class="text-start mt-2">
        <% @group_members.each do |group_member| %>
          <p class="mt-2">
            <%= link_to member_path(group_member) do %>
              <%= group_member.member_name %>
            <% end %>
          </p>
        <% end %>
      </div>
    </div>
    <div class="col-12 border-bottom pb-4 d-flex justify-content-evenly">
      <% if @group.group_owner_id == current_member.id %>
        <button class="actions col-5 mt-4 btn btn-success btn-lg" data-bs-toggle="modal" data-bs-target="#groupupdate">
          <a class="fw-bold text-light">グループ編集</a>
        </button>
      <% else %>
        <button class="mt-4 btn btn-danger" type="button">
          <%= link_to "グループ退出", group_group_member_path(@group), method: :delete, class:"fw-bold text-light" %>
        </button>
      <% end %>
      <div class="modal fade" id="groupupdate">
        <div class="modal-dialog modal-dialog-centered modal-lg">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">グループ編集</h5>
              <button class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <%= form_with model: @group, url: group_path do |f| %>
              <div class="modal-body">
                <div class="mt-3">
                  <%= f.text_field :group_name, autofocus: true, placeholder: "グループネーム", class:"form-control" %>
                </div>

                <div class="mt-3 pb-3">
                  <%= f.text_field :group_introduction, placeholder: "グループ紹介文", class:"form-control" %>
                </div>
              </div>

              <div class="modal-footer">
                <div class="me-auto">
                  <%= f.submit "グループ編集", class:"btn btn-success text-light" %>
                </div>

                <button class="btn btn-danger" type="button">
                  <%= link_to "グループ解散", group_path(@group), method: :delete, class:"text-light" %>
                </button>

                <div>
                  <button class="btn btn-secondary" type="button" data-bs-dismiss="modal">Close</button>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <button class="actions col-5 mt-4 btn btn-info btn-lg" data-bs-toggle="modal" data-bs-target="#roomCreate">
        <a class="fw-bold text-light">ルーム作成</a>
      </button>
      <div class="modal fade" id="roomCreate">
        <div class="modal-dialog modal-dialog-centered modal-lg">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">ルーム作成</h5>
              <button class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <%= form_with model: @group_room, url: group_rooms_path do |f| %>
              <div class="modal-body">
                <div class="mt-3 pb-3">
                  <%= f.text_field :room_name, autofocus: true, placeholder: "ルームネーム", class:"form-control" %>
                </div>
                <%= f.hidden_field :group_id, value: @group.id %>
                <%= f.hidden_field :room_owner_id, value: current_member.id %>
              </div>

              <div class="modal-footer">
                <div class="me-auto">
                  <%= f.submit "ルーム作成", class:"btn btn-info text-light" %>
                </div>

                <div>
                  <button class="btn btn-secondary" type="button" data-bs-dismiss="modal">Close</button>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-12 mt-3">
      <% @group_rooms.each do |group_room| %>
        <%= group_room.room_name %>
      <% end %>
    </div>
  </div>

  <div class="col-9 ps-0">
    <div class=" pb-3">
      <div class="col-9 offset-2">
        <div id="group-chats">
          <table class="mt-2 table table-borderless">
            <% @group_chats.each do |group_chat| %>
              <tr>
                <td id="chat-profile-image"><%= image_tag group_chat.member.get_profile_image(50, 50) %></td>

                <td class="text-break">
                  <%= group_chat.member.member_name %><br>
                  <%= safe_join(group_chat.group_chat.split("\n"),tag(:br)) %>
                </td>

                <td>
                  <div class="dropend">
                    <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    </button>

                    <ul class="dropdown-menu">
                      <li class="text-center">
                        <a class="dropdown-item">
                          <%= link_to "編集", group_path(@group, group_chat_id: group_chat), class:"link-dark" %>
                        </a>
                      </li>

                      <li class="text-center">
                        <a class="dropdown-item">
                          <%= link_to "削除", group_group_chat_path(@group, group_chat), method: :delete, class:"link-dark" %>
                        </a>
                      </li>
                    </ul>
                  </div>
                </td>
              </tr>
            <% end %>
          </table>
        </div>
        <div>
          <%= form_with model: @group_chat, url: @group_chat.id.nil? ? group_group_chats_path(group_id: @group) : group_group_chat_path(@group_chat, group_id: @group) do |f| %>
            <div class="mt-4 input-group d-flex justify-content-center">
              <div class="col-10 text-wrap">
                <%= f.text_area :group_chat, placeholder: "コメントを送信", class:"form-control form-control-sm" %>
              </div>

              <% if @group_chat.id.nil? %>
                <div>
                  <%= button_tag method: :post do %>
                    <i class="fa-solid fa-square-caret-up"></i>
                  <% end %>
                </div>
              <% else %>
                <div>
                  <%= button_tag method: :patch do %>
                    <i class="fa-solid fa-square-caret-up"></i>
                  <% end %>
                </div>
              <% end %>
            </div>

            <% unless @group_chat.id.nil? %>
              <div class="col-3 offset-1">
                <%= link_to "キャンセル", group_path(@group), class:"link-dark" %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>