<div class="row mt-4 pb-4 border-bottom">
  <h2 class="text-center">ルームページ</h2>
</div>

<div class="row border-bottom justify-content-center">
  <div class="col-3 border-end p-0">
    <div class="col-12 border-bottom d-flex justify-content-center" id="group-sideber-top">
      <div class="text-start mt-2">
        <h6 class="mt-2">ルームメンバー一覧</h6>
        <% @room_members.each do |room_member| %>
          <p class="mt-2">
            <%= link_to member_path(room_member), class:"text-dark" do %>
              <%= room_member.member_name %>
            <% end %>
          </p>
        <% end %>
      </div>
    </div>
    <div class="col-12 border-bottom pb-4 d-flex justify-content-evenly">
      <button class="actions col-5 mt-4 btn btn-success btn-lg" data-bs-toggle="modal" data-bs-target="#groupupdate">
        <a class="fw-bold text-light">ルーム編集</a>
      </button>
      <button class="mt-4 btn btn-danger" type="button">
        <%= link_to "ルーム退出", room_destroy_group_group_member_path(@group_room), method: :delete, class:"fw-bold text-light" %>
      </button>
      <div class="modal fade" id="groupupdate">
        <div class="modal-dialog modal-dialog-centered modal-lg">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">ルーム編集</h5>
              <button class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <%= form_with model: @group_room, url: group_room_path do |f| %>
              <div class="modal-body">
                <div class="mt-3">
                  <%= f.text_field :room_name, autofocus: true, placeholder: "グループネーム", class:"form-control" %>
                </div>
              </div>

              <div class="modal-footer">
                <div class="me-auto">
                  <%= f.submit "ルーム編集", class:"btn btn-success text-light" %>
                </div>

                <button class="btn btn-danger" type="button">
                  <%= link_to "ルーム解散", group_room_path(@group_room), method: :delete, class:"text-light" %>
                </button>

                <div>
                  <button class="btn btn-secondary" type="button" data-bs-dismiss="modal">Close</button>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-9 ps-0">
    <div class=" pb-3">
      <div class="col-9 offset-2">
        <div id="group-chats">
          <table class="mt-2 table table-borderless">
            <% @room_chats.each do |room_chat| %>
              <tr>
                <td id="chat-profile-image"><%= image_tag room_chat.group_member.member.get_profile_image(50, 50) %></td>

                <td class="text-break">
                  <%= room_chat.group_member.member.member_name %><br>
                  <%= safe_join(room_chat.room_chat.split("\n"),tag(:br)) %>
                </td>

                <td>
                  <div class="dropend">
                    <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    </button>

                    <ul class="dropdown-menu">
                      <li class="text-center">
                        <a class="dropdown-item">
                          <%= link_to "編集", group_room_path(@group_room, room_chat_id: room_chat), class:"link-dark" %>
                        </a>
                      </li>

                      <li class="text-center">
                        <a class="dropdown-item">
                          <%= link_to "削除", group_room_room_chat_path(@group_room, room_chat), method: :delete, class:"link-dark" %>
                        </a>
                      </li>
                    </ul>
                  </div>
                </td>
              </tr>
            <% end %>
          </table>
        </div>
        <div>
          <%= form_with model: @room_chat, url: @room_chat.id.nil? ? group_room_room_chats_path(group_room_id: @group_room) : group_room_room_chat_path(@room_chat, group_room_id: @group_room) do |f| %>
            <div class="mt-4 input-group d-flex justify-content-center">
              <div class="col-10 text-wrap">
                <%= f.text_area :room_chat, placeholder: "コメントを送信", class:"form-control form-control-sm" %>
              </div>

              <% if @room_chat.id.nil? %>
                <div>
                  <%= button_tag method: :post do %>
                    <i class="fa-solid fa-square-caret-up"></i>
                  <% end %>
                </div>
              <% else %>
                <div>
                  <%= button_tag method: :patch do %>
                    <i class="fa-solid fa-square-caret-up"></i>
                  <% end %>
                </div>
              <% end %>
            </div>

            <% unless @room_chat.id.nil? %>
              <div class="col-3 offset-1">
                <%= link_to "キャンセル", group_room_path(@room_chat.group_room), class:"link-dark" %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>