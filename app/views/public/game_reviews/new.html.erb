<div class="row mt-4 pb-4 border-bottom">
  <h2 class="text-center">ゲームレビュー</h2>
</div>

<div class="container">
  <div class="row mt-5 justify-content-center">
    <div class="col-7 pb-5 border-bottom">
      <%= form_with model: @member, url: member_registration_path do |f| %>
        <table class="table table-borderless">
          <tr>
            <th>
              <%= f.label :タイトル %>
            </th>

            <td>
              <%= f.text_field :game_title, autofocus: true, autocomplete: "member_name", placeholder: "タイトル", class:"form-control" %>
            </td>
          </tr>

          <tr>
            <th>
              <%= f.label :ジャンル %>
            </th>

            <td>
              <%#= f.collection_select :email, autocomplete: "email", placeholder: "ジャンルを選択してください", class:"form-control" %>
            </td>
          </tr>

          <tr>
            <th>
              <%= f.label :タグ %>
            </th>

            <td>
              <%= f.text_field :password_confirmation, autocomplete: "new-password", placeholder: "空白を空ける事で複数登録出来ます", class:"form-control" %>
            </td>
          </tr>

          <tr>
            <th>
              <%= f.label :感想 %>
            </th>

            <td>
              <%= f.text_area  :password_confirmation, autocomplete: "new-password", placeholder: "感想", class:"form-control" %>
            </td>
          </tr>

          <tr>
            <th>
              <%= f.label :￥  %>
            </th>

            <td>
              <%= f.number_field :password_confirmation, autocomplete: "new-password", placeholder: "値段", class:"form-control" %>
            </td>
          </tr>

          <tr>
            <th>
              <%= f.label :評価  %>
            </th>

            <td>
              <div class="form-group row" id="review">
                <%= f.hidden_field :game_rating, id: :review_star %>
              </div>
              <%= render "review" %>
            </td>
          </tr>
        </table>

        <div class="actions mt-4 text-center">
          <%= f.submit "登録", class:"btn btn-info btn-lg link-light fw-bold btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>